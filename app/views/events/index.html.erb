<p id="notice"><%= notice %></p>
<p id="event-alert"><%= alert %></p>

<div class="event-lists">
   <%= link_to "Create Event", new_event_path, class:"btn btn-success event-link" %>
</div>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>Author</th>
      <th>Name</th>
      <th>Address</th>
      <th>Start at</th>
      <th>End at</th>
      <th>Photo</th>
      <!-- <th>Description</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.user.name %></td>
        <td><%= event.name %></td>
        <td><%= event.address %></td>
        <td><%= event.start_at %></td>
        <td><%= event.end_at %></td>
        <td class="event-photo"><% if event.photo.present? %>
          <%= image_tag event.photo.url(:thumb) %>
        <% end %>
        </td>
        <!-- <td><%= event.description %></td> -->
        <td><%= link_to 'Show', event, class:"btn btn-info event-link" %></td>
        <td><%= link_to 'Edit', edit_event_path(event), class:"btn btn-warning event-link-warning"  %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-danger event-link" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br><br>
<div class="event-assistants">
<h2 class="event-assistants">Events To Attend</h2>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Event Date</th>
    </tr>
  </thead>
  <tbody>
    <% @my_assitances.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td style="width:45%"><%= event.description %></td>
        <td><%= event.start_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
